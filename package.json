      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "autoprefixer": "^10.2.5",
    "babel-plugin-macros": "^3.0.1",
    "babel-plugin-tailwind-components": "^0.5.10",
